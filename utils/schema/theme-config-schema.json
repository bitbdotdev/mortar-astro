{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ThemeConfig",
  "definitions": {
    "ThemeConfig": {
      "type": "object",
      "properties": {
        "global": {
          "type": "object",
          "properties": {
            "siteName": {
              "type": "string",
              "description": "Name of the website"
            },
            "siteUrl": {
              "type": "string",
              "description": "URL of the website"
            }
          },
          "required": [
            "siteName",
            "siteUrl"
          ],
          "additionalProperties": false,
          "description": "Global configurations like url, language etc."
        }
      },
      "required": [
        "global"
      ],
      "additionalProperties": false,
      "description": "Type definition for theme configuration specified in `theme-config.json`"
    }
  }
}