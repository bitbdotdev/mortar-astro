{
  "extends": "astro/tsconfigs/strict",
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"],
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "compilerOptions": {
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"]
    }
  }
}
